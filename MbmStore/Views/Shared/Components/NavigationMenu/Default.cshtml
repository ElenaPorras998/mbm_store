@model IEnumerable<string>

<div style="margin-top: 1rem">
    <a class="btn btn-block btn-secondary" asp-action="Index" asp-controller="Catalogue" asp-route-category="">Home</a>

    @foreach (string category in Model)
    {
        <a class="btn btn-block 
           @(category == ViewBag.SelectedCategory ? "btn-primary": "btn-secondary")" 
           asp-action="Index" asp-controller="Catalogue" asp-route-category="@category">@category</a>
    }
</div>