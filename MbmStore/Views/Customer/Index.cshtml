@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@{
    ViewData["Title"] = "Customers";
}

<a asp-controller="Home" asp-action="Index">Home</a>

<h1>Customers</h1>

@foreach (var customer in ViewBag.Customers)
{
    <div class="customer-label">
        <p><strong>Name:</strong><span> @customer.FirstName @customer.LastName</span><span> (@string.Join(", ", customer.PhoneNumbers);)</span></p>
        <p><strong>Address:</strong><span> @customer.Address</span></p>
        <p><strong>City:</strong><span> @customer.Zip, @customer.City</span></p>
        <p>@customer.FirstName @customer.LastName is @customer.Age years old.</p>
    </div>
    <br />
    <br />
}

