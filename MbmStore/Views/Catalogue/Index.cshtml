@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@{
    ViewData["Title"] = "Catalogue";
}

<a asp-controller="Home" asp-action="Index">Home</a>

<section>
    <h2>Books</h2>
    <div style="display:flex;flex-wrap:wrap;justify-content:space-around;">
        @foreach (var book in ViewBag.Books)
        {
            <div style="display:flex;">
                <div style="margin-right:1rem;">
                    <p><img src="/Images/@book.ImageFileName" alt="@book.Title" /></p>
                </div>
                <div>
                    <p>Book: @book.Title</p>
                    <p>Price: @String.Format("{0:0.00}", book.Price)</p>
                    <p>Author: @book.Author</p>
                    <p>Publisher: @book.Publisher (@book.Published)</p>
                    <p>ISBN: @book.ISBN</p>
                </div>
            </div>
        }
    </div>
    <hr />
</section>

<section>
    <h2>CDS</h2>
    @foreach (var cd in ViewBag.Cds)
    {
        <div style="display:flex;">
            <div>
                <p><img src="/Images/@cd.ImageFileName" alt="@cd.Title" /></p>
                <p>Album: @cd.Title</p>
                <p>Price: @String.Format("{0:0.00}", cd.Price)</p>
                <p>Artist: @cd.Artist</p>
                <p>Label: @cd.Label (@cd.Released)</p>
            </div>
            <div>
                <h3>Tracks:</h3>
                <ol>
                    @foreach (var track in cd.Tracks)
                    {
                    <li>@track.Title (@track.Composer) @track.Length.Minutes:@track.Length.Seconds</li>
                    }
                </ol>
                <p><strong>Total playing time:</strong>@cd.PlayingTime</p>
            </div>
        </div>
        <hr />
    }
</section>

<section>
    <h2>Movies</h2>
    @foreach (var movie in ViewBag.Movies)
    {
        <div>
            <p>Title: @movie.Title</p>
            <p>Price: @String.Format("{0:0.00}", movie.Price)</p>
            <p>Director: @movie.Director</p>
            <p><img src="/Images/@movie.ImageFileName" alt="@movie.Title" /></p>
        </div>
        <hr />
    }
</section>
